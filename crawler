import config.MainConfig;import core.Constant;import webObj.Page;/********/public  abstract  class Crawler implements Runnable { private Page page; private Constant constant; private String currUrl;  // provide  for the user to reridde    public abstract void process(Page page);        @Override public void run() {  currUrl = urlsPool.pop();  page = connector.getPage(currUrl);  List<String> urls = page.getUrls();  urlsPool.add(urls);  process(page);  }        private void setConfig(MainConfig config){     constant  = new Constant();     config.configConstant(constant);    }  private void initCrawler(){  page = connector.getPage(seed);  List<String> urls = page.getUrls();  urlsPool.add(urls);  process(page);  }     public void start() {     initCrawler();     //create the Thread     for(int i=0;i<constant.getThreadNum();i++){      Crawler crawlerthis;   try {        crawlerthis = this.getClass().newInstance(); //Create a crawler object that user define    Thread thread = new Thread(crawlerthis);            thread.start();         } catch (InstantiationException e) {        e.printStackTrace();   } catch (IllegalAccessException e) {        e.printStackTrace();   }           } }}
